{
  "watch": [
    "app.js",
    "routes/",
    "controllers/",
    "services/",
    "repositories/",
    "middlewares/",
    "config/",
    "models/",
    "utils/"
  ],
  "ext": "js,json",
  "ignore": [
    "node_modules/",
    "*.test.js",
    "*.spec.js",
    "logs/",
    "*.log"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "delay": "1000",
  "verbose": true
}
